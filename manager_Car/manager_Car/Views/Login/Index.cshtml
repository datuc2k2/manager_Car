<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fd;
            margin: 0;
            padding: 0;
        }

        .half {
            display: flex;
            height: 100vh;
        }

        .bg {
            flex: 1;
            background-size: cover;
            background-position: center;
        }

        .contents {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fd;
        }

        h3 {
            font-weight: 300;
            margin-bottom: 10px;
        }

            h3 strong {
                font-weight: 700;
            }

        p {
            color: #b0b0b0;
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px 10px;
            width: 100%;
            font-size: 16px;
        }

        .btn-primary {
            background: #f86d18;
            border: none;
            color: white;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background: #d55b0e;
            }

        .control--checkbox {
            position: relative;
            padding-left: 25px;
            cursor: pointer;
            font-size: 14px;
            user-select: none;
            color: #666;
        }

            .control--checkbox input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
            }

        .control__indicator {
            position: absolute;
            top: 2px;
            left: 0;
            height: 15px;
            width: 15px;
            background-color: #eee;
            border-radius: 3px;
        }

        .control--checkbox input:checked ~ .control__indicator {
            background-color: #f86d18;
        }

        .forgot-pass {
            font-size: 14px;
            color: #666;
            text-decoration: underline;
        }

        .ml-auto {
            margin-left: auto;
        }

        label {
            display: inline-block;
            margin-bottom: 0.5rem;
        }
    </style>

    <title>Login #2</title>
</head>
<body>


    <div class="half">
        <div class="contents">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h2>Đăng nhập hệ thống</h2>
                        <form id="loginForm" method="post">
                            <div class="form-group first">
                                <label for="user_name">Tài khoản</label>
                                <input type="text" class="form-control" name="user_name" id="user_name">
                                <span class="text-danger" id="usernameError"></span>
                            </div>

                            <div class="form-group last mb-3">
                                <label for="user_password">Mật khẩu</label>
                                <input type="password" class="form-control" name="user_password" id="user_password" placeholder="********">
                                <span class="text-danger" id="passwordError"></span>
                            </div>

                            <input type="submit" value="Đăng nhập" class="btn btn-block btn-primary" style="cursor:pointer">
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg" style="background-image: url('image/bg_1.jpg');"></div>
    </div>


    <script>
        $(document).ready(function () {
            $('#loginForm').on('submit', function (e) {
                e.preventDefault();

                var formData = {
                    user_name: $('input[name="user_name"]').val(),
                    user_password: $('input[name="user_password"]').val()
                };

                $.ajax({
                    url: '/api/Auth/Login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        if (response) {
                            // Lưu token vào localStorage
                            localStorage.setItem("authToken", response);

                            // Điều hướng nếu có đường dẫn, hoặc mặc định về /home
                            const redirectUrl = "/manage/AccountList";
                            window.location.href = redirectUrl;
                        } else {
                            Swal.fire({
                                toast: true,
                                position: 'top-end',
                                icon: 'error',
                                title: response.message || 'Đăng nhập thất bại!',
                                showConfirmButton: false,
                                timer: 3000
                            });
                        }
                    },
                    error: function (xhr) {
                        const message = xhr.responseJSON?.message || 'Đăng nhập thất bại!';
                        Swal.fire({
                            toast: true,
                            position: 'top-end',
                            icon: 'error',
                            title: message,
                            showConfirmButton: false,
                            timer: 3000
                        });
                    }
                });
            });
        });
    </script>

</body>
</html>