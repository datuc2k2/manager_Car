	<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script> 
	<script src="https://cdn.datatables.net/2.1.4/js/dataTables.min.js"></script>
	<style>
		body {
			background-color: #ffff0005;
		}
		table.dataTable {
			width: 100% !important;
			border-collapse: collapse;
			border: 1px solid #dee2e6;
		}

			table.dataTable th {
				background-color: #006fff2e;
			}
			table.dataTable th, table.dataTable td {
				border: 1px solid #dee2e6;
				padding: 8px;
				text-align: center !important;
			}

		.table-container {
			height: 500px;
			overflow-y: auto;
			position: relative;
		}

		#darkNightTable thead th {
			position: sticky;
			top: 0;
			background-color: #63a5fb;
			z-index: 9;
		}

		.fixed-row {
			position: sticky;
			background-color: #ffa900 !important; 
			z-index: 5;
			box-shadow: 0 2px 2px rgba(0,0,0,0.05);
		}

		.fixed-row-0 {
			top: 40px;
		}

		.fixed-row-1 {
			top: 81px;
		}

		.fixed-row-2 {
			top: 122px;
		}

		.fixed-row-3 {
			top: 163px;
		}

		.fixed-row-4 {
			top: 204px;
		}
		.header_image {
			display: flex;
			align-items: center;
			gap: 10px; 
			padding: 10px;
		}

		.logo {
			width: 100px; 
			height: auto;
		}

		.header_image div {
			flex: 1; /* Take up remaining space */
			text-align: center; /* Center the h2 text */
		}
	</style>
</head>

<body>
	<div class="header">
		<div class="header_image">
			<img src="~/image/Logo zoom chuẩn.png" alt="Logo" class="logo">
			<div>
				<h2 style="text-align:center">Bảng tổng kết điểm <span style="color:#0dcaf0!important"> FLASHCAR GROUP</span></h2>
			</div>
		</div>
			<div class="row">
			<i>
				- Bấm
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path></svg> xem chi tiết lịch sử giao dịch
			</i>
		</div>
		<div class="row">
			<i>
				- Mua điểm ib kế toán FlashCar .
			</i>
		</div>
		<div class="row">
			<i>
				- SĐT nhóm trưởng : <a href=""> 0372223883</a> , SĐT kế toán trưởng : <a href=""> 0867379860</a>
			</i>
		</div>
		<div class="row">
			<i>
				- <a href="https://docs.google.com/document/d/10QjFQNB4RP2aFikIV3-WUe5M2p_7zAcIp1CM_30jyYU/edit?tab=t.0">Nội quy FlashCar </a>
			</i>
		</div>

	</div>
	<div class="table-container">
		<table id="darkNightTable" class="display">
			<thead>
				<tr>
					<th>STT</th>
					<th>Tên Zalo</th>
					<th>Điểm</th>
					<th>Tiền Thưởng</th>
					<th>Trạng Thái</th>
				</tr>
			</thead>
			<tbody></tbody> <!-- Dữ liệu sẽ được thêm động -->
		</table>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Lịch sử giao dịch của <span id="nameUser" style="color:#0dcaf0"></span></h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="row mb-3">
						<div class="col-md-5">
							<label for="historyFromDate" class="form-label">Từ ngày:</label>
							<input type="date" class="form-control" id="historyFromDate">
						</div>
						<div class="col-md-5">
							<label for="historyToDate" class="form-label">Đến ngày:</label>
							<input type="date" class="form-control" id="historyToDate">
						</div>
						<div class="col-md-2" style="margin-top: 32px">
							<button type="button" class="btn btn-info" id="applyHistoryFilterBtn" title="Áp dụng bộ lọc">
								<i class="bi bi-funnel-fill"></i>
							</button>
						</div>

					</div>

					<hr> <div id="historyContent" style="max-height: 400px; overflow-y: auto;">
						<p>Đang tải lịch sử...</p>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
				</div>
			</div>
		</div>
	</div>

	<script>
		let table;

		$(document).ready(function () {
			fetchUsers();
		});

		function fetchUsers() {
			$.ajax({
				url: "/api/UserQuery/getUsers",
				method: "GET",
				success: function (data) {
					// Map user data to expected structure
					const tableData = data.map((user, index) => ({
						id: user.id,
						name: user.name,
						points: user.point,
						reward: user.point * 150000
					}));

					// Initialize or refresh DataTable
					if ($.fn.DataTable.isDataTable('#darkNightTable')) {
						table.clear().rows.add(tableData).draw();
					} else {
						table = $('#darkNightTable').DataTable({
							language: {
								"decimal": "",
								"emptyTable": "Không có dữ liệu",
								"info": "Hiển thị _START_ đến _END_ của _TOTAL_ bản ghi",
								"infoEmpty": "Hiển thị 0 đến 0 của 0 bản ghi",
								"infoFiltered": "(lọc từ _MAX_ bản ghi)",
								"thousands": ",",
								"lengthMenu": "Hiển thị _MENU_ bản ghi",
								"loadingRecords": "Đang tải...",
								"processing": "Đang xử lý...",
								"search": "Tìm kiếm:",
								"zeroRecords": "Không tìm thấy bản ghi nào",
								"paginate": {
									"first": "<<",
									"last": ">>",
									"next": ">",
									"previous": "<"
								}
							},
							data: tableData,
							columns: [
								{
									data: null,
									render: function (data, type, row, meta) {
										return meta.row + 1; // STT
									}
								},
								{ data: "name" },
								{ data: "points" },
								{
									data: "reward",
									render: function (data) {
										return `${data.toLocaleString('vi-VN')} đ`;
									}
								},
								{
									data: null,
									render: function (data) {
										const nameEscaped = data.name.replace(/'/g, "\\'");
										return `
																		<button onclick="showHistory(${data.id}, '${nameEscaped}')" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
																	<span style="color:white">
																		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
																			<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
																			<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
																		</svg>
																	</span>
																</button>`;
									}
								}
							],
							paging: true,
							searching: true,
							info: false,
							"createdRow": function (row, data, dataIndex) {
								if (dataIndex < 5) {
									$(row).css('font-weight', 'bold');
									$(row).addClass('fixed-row fixed-row-' + dataIndex);
								}
							}
						});
					}
				},
				error: function (xhr, status, error) {
					alert("Lỗi khi tải danh sách người dùng: " + error);
				}
			});
		}

	
	</script>

	
</body>
</html>